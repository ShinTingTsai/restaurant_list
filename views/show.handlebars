<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="好。吃">
        我的餐廳清單
      </a>
      <a class="btn btn-primary" href="/restaurants/new">建立新餐廳</a>
    </div>
  </nav>

  <div class="banner"></div>
</header>


<div class="container">
  <h1 class="mb-1 restaurant-show-title">{{ restaurant.name }}</h1>

  <div class="row justify-content-end mb-3">
    <form action="/restaurants/{{ restaurant._id }}?_method=DELETE" method="post">
      <button class="btn btn-danger mr-3" type="submit">刪除</button>
    </form>
    <a href="/restaurants/{{ restaurant._id }}/edit" class="btn btn-primary mr-3">修改</a>
  </div>
  <div class="row align-items-center mb-3">
    <div class="col-sm-2 text-secondary text-right pr-0">
      類別：
    </div>
    <div class="col-sm-10">
      {{ restaurant.category }}
    </div>
  </div>
  <div class="row align-items-center mb-3">
    <div class="col-sm-2 text-secondary text-right pr-0">
      地址：
    </div>
    <div class="col-sm-10">
      {{ restaurant.location }}
    </div>
  </div>
  <div class="row align-items-center mb-3">
    <div class="col-sm-2 text-secondary text-right pr-0">
      電話：
    </div>
    <div class="col-sm-10">
      {{ restaurant.phone }}
    </div>
  </div>
  <div class="row align-items-center mb-3">
    <div class="col-sm-2 text-secondary text-right pr-0">
      簡介：
    </div>
    <div class="col-sm-10">
      {{ restaurant.description }}
    </div>
  </div>
  <div class="row align-items-center mt-5">
    <img class="rounded mx-auto d-block w-100" src="{{ restaurant.image }}" alt="{{ restaurant.name }}"
      style="max-width: 600px;">
  </div>
</div>