<div class="container">
  <form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="post">
    <h1 class="mb-1 restaurant-show-title">
      <input required type="text" placeholder="name" name="name" value="{{ restaurant.name }}">
    </h1>
    <div class="row justify-content-end mb-3">
      <a href="/restaurants/{{restaurant._id}}" class="btn btn-secondary mr-3">取消</a>
      <button type="submit" class="btn btn-primary mr-3">存檔</button>
      <a href="#" class="btn btn-outline-secondary mr-3 disabled">刪除</a>
      <a href="/restaurants/{{restaurant._id}}/edit" class="btn btn-outline-secondary mr-3 disabled">修改</a>
    </div>
    <div class="row align-items-center mb-3">
      <div class="col-sm-2 text-secondary text-right pr-0">
        類別：
      </div>
      <div class="col-sm-10">
        <select id="category" class="form-control" name="category">
          {{!-- <option>選擇餐廳類型</option> --}}
          <option value="美式餐廳" {{#equal restaurant.category "美式餐廳"}} selected {{/equal}}>美式餐廳</option>
          <option value="日本料理" {{#equal restaurant.category "日本料理"}} selected {{/equal}}>日本料理</option>
          <option value="義式餐廳" {{#equal restaurant.category "義式餐廳"}} selected {{/equal}}>義式餐廳</option>
          <option value="中式餐廳" {{#equal restaurant.category "中式餐廳"}} selected {{/equal}}>中式餐廳</option>
          <option value="泰式料理" {{#equal restaurant.category "泰式料理"}} selected {{/equal}}>泰式料理</option>
          <option value="中東料理" {{#equal restaurant.category "中東料理"}} selected {{/equal}}>中東料理</option>
          <option value="異國風味" {{#equal restaurant.category "異國風味"}} selected {{/equal}}>異國風味</option>
          <option value="吃到飽" {{#equal restaurant.category "吃到飽"}} selected {{/equal}}>吃到飽</option>
          <option value="早午餐" {{#equal restaurant.category "早午餐"}} selected {{/equal}}>早午餐</option>
          <option value="咖啡" {{#equal restaurant.category "咖啡"}} selected {{/equal}}>咖啡</option>
          <option value="酒吧" {{#equal restaurant.category "酒吧"}} selected {{/equal}}>酒吧</option>
        </select>
      </div>
    </div>
    <div class="row align-items-center mb-3">
      <div class="col-sm-2 text-secondary text-right pr-0">
        地址：
      </div>
      <div class="col-sm-10">
        <input required type="text" class="form-control" placeholder="location" name="location" value="{{ restaurant.location }}">
      </div>
    </div>
    <div class="row align-items-center mb-3">
      <div class="col-sm-2 text-secondary text-right pr-0">
        電話：
      </div>
      <div class="col-sm-10">
        <input required type="text" class="form-control" placeholder="phone" name="phone" value="{{ restaurant.phone }}">
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-sm-2 text-secondary text-right pr-0">
        簡介：
      </div>
      <div class="col-sm-10">
        <textarea required class="text-left form-control" name="description" rows="3">{{ restaurant.description }}</textarea>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-sm-2 text-secondary text-right pr-0">
        評價：
      </div>
      <div class="col-sm-10">
        <input required type="number" class="form-control" id="rating" name="rating" placeholder="5.0" max="5" min="0"
          step="0.1" value="{{ restaurant.rating }}">
      </div>
    </div>
    <div class="row align-items-center mb-3">
      <div class="col-sm-2 text-secondary text-right pr-0">
        圖片：
      </div>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="image" name="image" value="{{ restaurant.image }}">
      </div>
    </div>
    <div class="row">
      <img class="rounded mx-auto d-block w-100" src="{{ restaurant.image }}" alt="{{ restaurant.name }}"
        style="max-width: 600px;">
    </div>
  </form>
</div>
